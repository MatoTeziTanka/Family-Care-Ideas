# Atlantis Pinball Leaderboard - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/atlantis_pinball.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/atlantis_pinball

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
# Email sent to this address when scores are updated
NOTIFICATION_EMAIL=AtlantisPinball@lightspeedup.com

# SMTP Configuration (Gmail)
SMTP_USERNAME=lightspeedup.smtp@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# To generate Gmail app password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification
# 3. Generate App Password for "Mail"
# 4. Copy the 16-character password here

# =============================================================================
# SECURITY (Production Only)
# =============================================================================
# SECRET_KEY=your-secret-key-for-jwt-tokens
# ADMIN_PASSWORD=your-admin-panel-password

# =============================================================================
# VOICE ASSISTANTS (Phase 2 - Future)
# =============================================================================
# ALEXA_SKILL_ID=
# GOOGLE_PROJECT_ID=

# =============================================================================
# SMS INTEGRATION (Phase 2 - Future)
# =============================================================================
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
